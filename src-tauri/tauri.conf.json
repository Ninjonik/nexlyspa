{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:3000",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Nexly",
    "version": "0.2.1"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "process": {
        "relaunch": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "eu.igportals.nexly",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://releases.igportals.eu/nexlyspa/{{target}}-{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJGOTcyQjUyMTA0QUFFRDUKUldUVnJrb1FVaXVYTDFtS3pqTG8zNFV6TmVKUFEvcW5SQk5ISVh1dCs2Q1RGZ1VXU2IwZUJiN3kK",
      "windows": {
        "installMode": "basicUi"
      }
    },
    "windows": [
      {
        "title": "Nexly",
        "width": 800,
        "height": 600,
        "fullscreen": false,
        "resizable": true,
        "maximized": true
      }
    ]
  }
}
